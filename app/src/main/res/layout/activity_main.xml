<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/darkershades"
    tools:context=".MainActivity">

    <!-- Semi-transparent Overlapping Shapes as Background -->
    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-80dp"
        android:layout_marginTop="-100dp"
        android:src="@drawable/circleshape" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-90dp"
        android:layout_marginBottom="-90dp"
        android:src="@drawable/waveshape" />

    <!-- Main Content Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <!-- App Logo -->
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/mechtech"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp" />

        <!-- Title Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="20dp" />

        <!-- Phone Number Input -->
        <EditText
            android:id="@+id/phonenNumber"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:hint="Phone number"
            android:textColor="@color/white"
            android:textColorHint="#A5A6F6"
            android:background="@drawable/darkershades"
            android:drawableStart="@drawable/phone"
            android:fontFamily="sans-serif"
            android:textSize="16sp" />

        <!-- Pin Input -->
        <EditText
            android:id="@+id/pin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:hint="Enter PIN"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="#A5A6F6"
            android:background="@drawable/darkershades"
            android:drawableStart="@drawable/lock"
            android:fontFamily="sans-serif"
            android:textSize="16sp" />

        <!-- Login as Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Login as:"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium" />

        <!-- Login Options -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <!-- Client Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/loginclient"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:text="Client"
                android:textSize="16sp"
                app:cornerRadius="24dp"
                app:strokeColor="@color/white"
                app:strokeWidth="2dp"
                android:textColor="@color/white" />

            <!-- Mechanic Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/loginmech"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:text="Mechanic"
                android:textSize="16sp"
                app:cornerRadius="24dp"
                app:strokeColor="@color/white"
                app:strokeWidth="2dp"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Register New User Text -->
        <TextView
            android:id="@+id/registernew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Register as a new user"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:clickable="true"
            android:layout_marginBottom="40dp"
            android:gravity="center" />
    </LinearLayout>
</RelativeLayout>
