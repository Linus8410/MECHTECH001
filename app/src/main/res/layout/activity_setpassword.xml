<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/darkershades">

    <!-- Card Container for Aesthetic Look -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:background="@drawable/backgroundpassword"
        android:elevation="8dp"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/lock"
            android:contentDescription="Lock Icon"
            android:layout_gravity="center"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Your Password"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Phone Number Input -->
        <EditText
            android:id="@+id/inputphone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/roundedinputsfields"
            android:hint="Enter Phone Number"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:padding="12dp"
            android:inputType="phone" />

        <!-- Password Input -->
        <EditText
            android:id="@+id/inputpin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/roundedinputsfields"
            android:hint="Enter Pin"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:padding="12dp"
            android:inputType="textPassword" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/setpin"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"

            android:text="Set Password"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:elevation="4dp"
            android:padding="12dp" />
        <ProgressBar
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/progressBar"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>
